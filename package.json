{
  "name": "bookshop",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "repository": "<Add your repository here>",
  "license": "UNLICENSED",
  "private": true,
  "dependencies": {
    "@cap-js/sqlite": "^1",
    "@sap/cds": "^8",
    "@sap/xssec": "^4",
    "dotenv": "^16.4.7",
    "express": "^4",
    "express-basic-auth": "^1.2.1",
    "sqlite3": "^5.1.7"
  },
  "devDependencies": {
    "@cap-js/cds-types": "^0.7.0",
    "@sap/cds-dk": "^8",
    "rimraf": "^6.0.1"
  },
  "scripts": {
    "start": "cds-serve",
    "build:mta": "mbt build -t gen --mtar mta.tar",
    "deploy:sqlite": "cds deploy --to sqlite --with-mocks",
    "deploy:cf": "cf deploy gen/mta.tar --delete-services",
    "deploy:mta": "npm run build:mta && npm run deploy:cf"
  },
  "sapux": [
    "app/tokenizer"
  ],
  "cds": {
    "requires": {
      "auth": "xsuaa",
      "html5-repo": true,
      "db": {
        "kind": "sqlite",
        "impl": "@cap-js/sqlite",
        "credentials": {
          "database": "db.sqlite"
        }
      },
      "features": {
        "in_memory_db": true
      }
    },
    "auth": {
      "passport": false
    }
  }
}
